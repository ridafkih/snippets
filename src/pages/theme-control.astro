<style is:global>
  * {
    margin: 0;
    padding: 0;
    list-style: none;
    box-sizing: border-box;
  }

  input,
  label {
    -webkit-tap-highlight-color: transparent;
  }

  span {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  :root {
    font-family: "Outfit", system-ui, sans-serif;
    letter-spacing: -0.0175em;
    line-height: 2em;

    --color-light-mode-background: #f9f9f9;
    --color-light-mode-text: #000000;
    --color-highlight: #4766eb;
  }

  html,
  body {
    width: 100%;
    height: 100%;
  }

  body {
    background: var(--color-light-mode-background);
    color: var(--color-light-mode-text);

    margin: auto;

    padding: 0 1rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>
