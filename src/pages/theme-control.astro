    <ThemeSelector />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    list-style: none;
    box-sizing: border-box;
  }

  input,
  label {
    -webkit-tap-highlight-color: transparent;
  }

  span {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  :root {
    font-family: "Outfit", system-ui, sans-serif;
    letter-spacing: -0.0175em;
    line-height: 2em;
  }

  html,
  body {
    width: 100%;
    height: 100%;
  }

  body {
    --color-background: #f9f9f9;
    --color-text: #000000;
    --color-highlight: #4766eb;

    background: var(--color-background);
    color: var(--color-text);

    margin: auto;

    padding: 0 1rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    transition: 0.12s background ease;

    &[data-theme="dark"] {
      --color-background: #262626;
      --color-highlight: #5a76f2;
      color: #ffffff;
    }
  }
</style>
